<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/cardBack"
    app:cardBackgroundColor="@color/black_shade_2"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <!--text view for displaying our note text-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/qusNum"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:text="0."
            android:textStyle="bold"/>
        <TextView
            android:layout_toRightOf="@+id/qusNum"
            android:id="@+id/idTVNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:padding="4dp"
            android:text="Note"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!--text view for displaying our last updated text-->
        <TextView
            android:id="@+id/idTVDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVNote"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:padding="4dp"
            android:text="Updated At"/>

            <RadioGroup
                android:layout_below="@+id/idTVDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rdgrp"
                >
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio1"
                    android:gravity="top"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:buttonTint="@color/themecolor"
                    />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio2"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="top"
                    android:paddingTop="5dp"
                    android:buttonTint="@color/themecolor"
                    />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio3"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="top"
                    android:paddingTop="5dp"
                    android:buttonTint="@color/themecolor"
                    />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio4"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="top"
                    android:paddingTop="5dp"
                    android:buttonTint="@color/themecolor"
                    />
            </RadioGroup>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/rd1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/rd2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/rd3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/rd4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        <ImageView
            android:visibility="gone"
            android:id="@+id/attempt"
            android:layout_alignParentEnd="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/attempt"
            app:tint="@color/green" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/notAttempt"
            android:layout_alignParentEnd="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/notattemptnew"
            app:tint="@color/red" />
